<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_setTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="40dp"
            android:height="0dp"
            android:text="Button"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row4"
            app:layout_constraintEnd_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row4" />


        <Button
            android:id="@+id/button_cancelTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="40dp"
            android:height="0dp"
            android:text="Button"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row5"
            app:layout_constraintEnd_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row5" />
        <Button
            android:id="@+id/button_startMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="40dp"
            android:height="0dp"
            android:text="Button"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row8"
            app:layout_constraintEnd_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row8" />


        <Button
            android:id="@+id/button_stopMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="40dp"
            android:height="0dp"
            android:text="Button"
            android:textSize="8sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row9"
            app:layout_constraintEnd_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_controlButtonsVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row9" />


        <EditText
            android:id="@+id/editTextNumber_C"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:width="160dp"
            android:height="40dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row2"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row2" />

        <EditText
            android:id="@+id/editTextNumber_T"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:width="160dp"
            android:height="40dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row4"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row4"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/editTextNumber_cpuID"
            android:layout_width="57dp"
            android:layout_height="48dp"
            android:width="160dp"
            android:height="40dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row6"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row6" />

        <EditText
            android:id="@+id/editTextNumber_targetThreadId"
            android:layout_width="57dp"
            android:layout_height="48dp"
            android:width="160dp"
            android:height="40dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row8"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row8" />

        <TextView
            android:id="@+id/textView_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:width="160dp"
            android:height="40dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row1" />

        <TextView
            android:id="@+id/textView_T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:width="160dp"
            android:height="40dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row3"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row3" />

        <TextView
            android:id="@+id/textView_cpuID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:width="160dp"
            android:height="40dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row5"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row5" />

        <TextView
            android:id="@+id/textView_targetThreadId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:width="160dp"
            android:height="40dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row7"
            app:layout_constraintEnd_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_settingRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row7" />

        <ScrollView
            android:layout_width="250dp"
            android:layout_height="fill_parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row2"
            app:layout_constraintEnd_toStartOf="@+id/guideline_utilTableDisplayVertical"
            app:layout_constraintStart_toStartOf="@+id/guideline_utilTableDisplayVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row2"
            android:scrollbars="none"
            android:layout_weight="1">
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout_threadTable"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">
                <TableRow>

                    <TextView
                        android:text="Thread"
                        android:padding="3dip" />
                    <TextView
                        android:text="Average Utilization"
                        android:padding="3dip" />
                </TableRow>

            </TableLayout>
        </ScrollView>


        <ScrollView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row1"
            app:layout_constraintEnd_toStartOf="@+id/guideline_selectListRegionVertical"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@+id/guideline_selectListRegionVertical"
            app:layout_constraintTop_toTopOf="@+id/guideline_row1"
            app:layout_constraintVertical_bias="0.0">

            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tableLayout_selectList"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guideline_row1"
                app:layout_constraintTop_toTopOf="@+id/guideline_row1"
                android:stretchColumns="1">

                <TableRow>
                    <TextView
                        android:text="Thread Selection"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>


        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_controlButtonsVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="380dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_settingRegionVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="200dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_selectListRegionVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="100dp" />



        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_utilTableDisplayVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="550dp" />

        <com.androidplot.xy.XYPlot
            android:id="@+id/plot"
            style="@style/APDefacto.Dark"
            android:layout_width="480dp"
            android:layout_height="300dp"
            app:domainTitle="domain"
            app:layout_constraintBottom_toTopOf="@+id/guideline_row11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_row11"
            app:layout_constraintVertical_bias="1.0"
            app:lineLabelRotationBottom="-45"
            app:lineLabels="left|bottom"
            app:rangeTitle="range"
            app:title="Utilization vs Time" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="200dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="80dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="120dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="160dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="200dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="240dp" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="280dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="320dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="360dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="400dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_row11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="595dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>